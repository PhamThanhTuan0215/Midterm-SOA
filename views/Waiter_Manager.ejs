<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waiter/Manager page</title>
    <link rel="stylesheet" href="/Css/Waiter_Manager.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>

<body>

    <div id="employeeData" data-employeeId="<%= employee.employeeId %>"></div>

    <div class="container">

        <div id="navigation">

            <div id="menu">

                <button id="btnNewOrder">
                    New Order
                </button>

                <button id="btnPayment">
                    Payment
                </button>

                <% if(employee.role=="manager" ) { %>
                    <button id="btnCurrentShift">
                        Bills Current Shift
                    </button>

                    <button id="btnHistory">
                        History
                    </button>

                    <button id="btnAccountManage">
                        Account Manage
                    </button>
                    <% } %>

            </div>

        </div>

        <div id="main">
            <div id="newOrderContent" class="content">
                <h1>New order</h1>
                <div id="grid-container" class="grid-view">
                    <!-- <div class="grid-item" data-table_code="1">1</div>
                    <div class="grid-item" data-table_code="2">2</div> -->
                </div>

                <div id="openTableModal" class="modal">
                    <div class="modal-content">
                        <span id="closeOpenTableModal" class="close">&times;</span>
                        <h2>Enter Customer Information</h2>
                        <div>
                            <label for="table_code">Table Code:</label>
                            <input type="number" id="table_code" placeholder="Enter table code" readonly>
                        </div>
                        <div>
                            <label for="customer">Customer Name:</label>
                            <input type="text" id="customer" placeholder="Enter customer name">
                        </div>
                        <div>
                            <label for="customer_number">Number of Customers:</label>
                            <input type="number" id="customer_number" placeholder="Enter number of customers">
                        </div>
                        <button id="btnOpen">Open Table</button>
                    </div>
                </div>

            </div>

            <div id="paymentContent" class="content">
                <h1>Payment</h1>
                <div class="input-group">
                    <label for="table_code_2">Table Code:</label>
                    <input type="number" id="table_code_2" placeholder="Enter table code">
                </div>
                <div class="input-group">
                    <label for="customer_2">Customer Name:</label>
                    <input type="text" id="customer_2" placeholder="Enter customer name">
                </div>
                <button id="btnSearchOrder">Search Order</button>
                <div id="searchResultOrder">
                    <div id="informationOrder">
                        <!-- <h2>Information of order</h2>
                        <p>Customer: <strong>Hai Nam</strong></p>
                        <p>Table Code: <strong>6</strong></p>
                        <p>Status complete: <strong>Completed</strong></p>
                        <p>Status payment: <strong>Not yet</strong></p>
                        <p>Total price: <strong>$8.49</strong></p>
                        <button id="btnPay">Pay</button> -->
                    </div>

                    <div id="detailOrder">
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Pizza</td>
                                    <td>1</td>
                                    <td>$4.00</td>
                                    <td><i class="completed-icon fas fa-check-circle"></i></td>
                                </tr>
                                <tr>
                                    <td>Pizza</td>
                                    <td>1</td>
                                    <td>$4.00</td>
                                    <td><i class="completed-icon fas fa-check-circle"></i></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div id="paymentModal" class="modal">
                    <div class="modal-content">
                        <span class="close" id="closePaymentModal">&times;</span>
                        <h2>Payment</h2>
                        <div class="input-group">
                            <label for="employeeId">Employee ID:</label>
                            <input type="text" id="employeeId" placeholder="Enter employee ID">
                        </div>
                        <div class="input-group">
                            <label for="received">Amount Paid:</label>
                            <input type="number" id="received" placeholder="Enter amount received">
                        </div>
                        <div class="errMessage" id="errMessagePayment">Error message</div>
                        <button id="btnConfirmPayment">Confirm</button>
                    </div>
                </div>
            </div>

            <div id="currentShiftContent" class="content">
                <h1>Current shift</h1>
                <table>
                    <thead>
                        <tr>
                            <th>Employee Id</th>
                            <th>Customer</th>
                            <th>Table Code</th>
                            <th>Total Price</th>
                            <th>Received</th>
                            <th>Refund</th>
                            <th>Date</th>
                            <th>Shift</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>S001</td>
                            <td>Thanh Tam</td>
                            <td>4</td>
                            <td>$43.99</td>
                            <td>$50.00</td>
                            <td>$6.07</td>
                            <td>03/31/2024</td>
                            <td>3</td>
                            <td><button class="view-detail">View</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div id="historyContent" class="content">
                <h1>History</h1>

                <label for="timeRange">Select Date:</label>
                <select id="timeRange">
                    <option value="today">Today</option>
                    <option value="yesterday">Yesterday</option>
                    <option value="thismonth">This Month</option>
                    <option value="thisyear">This Year</option>
                </select>

                
                <button id="searchFix" >Search</button>

                <div id="customTimeRange">
                    <label for="startDate">From Date:</label>
                    <input type="date" id="startDate">
            
                    <label for="endDate">To Date:</label>
                    <input type="date" id="endDate">

                    <button id="searchFlex" >Search</button>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>Employee Id</th>
                            <th>Customer</th>
                            <th>Table Code</th>
                            <th>Total Price</th>
                            <th>Received</th>
                            <th>Refund</th>
                            <th>Date</th>
                            <th>Shift</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- <tr>
                            <td>S001</td>
                            <td>Thanh Tam</td>
                            <td>4</td>
                            <td>$43.99</td>
                            <td>$50.00</td>
                            <td>$6.07</td>
                            <td>03/31/2024</td>
                            <td>3</td>
                            <td><button class="view-detail">View</button></td>
                        </tr> -->
                    </tbody>
                </table>
            </div>

            <div id="detailBillModal" class="modal">
                <div class="modal-content">
                    <span class="close" id="closeDetailBillModal">&times;</span>
                    <h2>Detail Bill</h2>
                    <div id="billInformation">
                        <!-- Thông tin hóa đơn -->
                        <p><strong>Employee ID:</strong> <span id="bill-employeeId"></span></p>
                        <p><strong>Customer:</strong> <span id="bill-customer"></span></p>
                        <p><strong>Table Code:</strong> <span id="bill-tableCode"></span></p>
                        <p><strong>Total Price:</strong> <span id="bill-totalPrice"></span></p>
                        <p><strong>Received:</strong> <span id="bill-received"></span></p>
                        <p><strong>Refund:</strong> <span id="bill-refund"></span></p>
                        <p><strong>Date:</strong> <span id="bill-date"></span></p>
                        <p><strong>Shift:</strong> <span id="bill-shift"></span></p>
                    </div>
                    <div id="foodItemsTable">
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody id="foodItems">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div id="accountManageContent" class="content">
                <h1>Account Manage</h1>

                <button id="btnAdd">Add employee</button>

                <table>
                    <thead>
                        <tr>
                            <th>Employee Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- <tr>
                            <td>W001</td>
                            <td>Thanh Tuan</td>
                            <td>thanhtuancr1234@gmail.com</td>
                            <td>waiter</td>
                            <td>
                                <button class="btnEdit">Edit</button>
                                <button class="btnDelete">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td>W001</td>
                            <td>Thanh Tuan</td>
                            <td>thanhtuancr1234@gmail.com</td>
                            <td>waiter</td>
                            <td>
                                <button class="btnEdit">Edit</button>
                                <button class="btnDelete">Delete</button>
                            </td>
                        </tr> -->
                    </tbody>
                </table>

                <div id="addEmployeeModal" class="modal">
                    <div class="modal-content">
                        <span class="close" id="closeAddEmployeeModal">&times;</span>
                        <h2>Add Employee</h2>
                        <div class="input-group">
                            <label for="add-role">Role:</label>
                            <select id="add-role">
                                <option value="waiter">Waiter</option>
                                <option value="manager">Manager</option>
                                <option value="chef">Chef</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <label for="add-employeeId">Employee ID:</label>
                            <input type="text" id="add-employeeId" placeholder="Enter employee ID">
                        </div>
                        <div class="input-group">
                            <label for="add-name">Name:</label>
                            <input type="text" id="add-name" placeholder="Enter name">
                        </div>
                        <div class="input-group">
                            <label for="add-email">Email:</label>
                            <input type="text" id="add-email" placeholder="Enter email">
                        </div>
                        <div class="input-group">
                            <label for="add-password">Password:</label>
                            <input type="password" id="add-password" placeholder="Enter password">
                            <i class="fas fa-eye-slash" id="togglePassword"></i>
                        </div>
                        <div class="error-message" id="add-error-message">
                            Error Message
                        </div>
                        <button id="btnAddConfirm">Confirm</button>
                    </div>
                </div>

                <div id="editEmployeeModal" class="modal">
                    <div class="modal-content">
                        <span class="close" id="closeEditEmployeeModal">&times;</span>
                        <h2>Edit Employee</h2>
                        <div class="input-group">
                            <label for="edit-role">Role:</label>
                            <select id="edit-role">
                                <option value="waiter">Waiter</option>
                                <option value="manager">Manager</option>
                                <option value="chef">Chef</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <label for="edit-employeeId">Employee ID:</label>
                            <input type="text" id="edit-employeeId" placeholder="Enter employee ID">
                        </div>
                        <div class="input-group">
                            <label for="edit-name">Name:</label>
                            <input type="text" id="edit-name" placeholder="Enter name">
                        </div>
                        <div class="input-group">
                            <label for="edit-email">Email:</label>
                            <input type="text" id="edit-email" placeholder="Enter email">
                        </div>
                        <div class="error-message" id="edit-error-message">
                            Error Message
                        </div>
                        <button id="btnEditConfirm">Confirm</button>
                    </div>
                </div>

                <div id="deleteEmployeeModal" class="modal">
                    <div class="modal-content">
                        <span class="close" id="closeDeleteEmployeeModal">&times;</span>
                        <h2>Do you want to delete this employee account?</h2>
                        <div class="error-message" id="delete-error-message">
                            Error Message
                        </div>
                        <button id="btnDeleteConfirm">Confirm</button>
                    </div>
                </div>
            </div>

        </div>

        <div>
            <button id="btnChangePassword">Change password</button>

            <div id="changePasswordModal" class="modal">
                <div class="modal-content">
                    <span class="close" id="closeChangePasswordModal">&times;</span>
                    <h2>Change your password</h2>
                    <div class="input-group">
                        <label for="old-password">Old Password:</label>
                        <input type="password" id="old-password" placeholder="Enter old password">
                        <i class="fas fa-eye-slash" id="toggleOldPassword"></i>
                    </div>
                    <div class="input-group">
                        <label for="new-password">New Password:</label>
                        <input type="password" id="new-password" placeholder="Enter new password">
                        <i class="fas fa-eye-slash" id="toggleNewPassword"></i>
                    </div>
                    <div class="error-message" id="change-password-error-message">
                        Error Message
                    </div>
                    <button id="btnChangePasswordConfirm">Confirm</button>
                </div>
            </div>

            <form action="/waiter-manager/logout" method="get">
                <button type="submit" id="btnLogout">Logout</button>
            </form>
        </div>

    </div>

    <script src="/Style/Waiter_Manager.js"></script>
</body>

</html>